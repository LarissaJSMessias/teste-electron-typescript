{
  "name": "electron-react-typescript",
  "version": "1.0.0",
  "description": "Electron+React+Typescript minimal starter",
  "author": {
    "name": "Brendon Cambu√≠",
    "url": "https://github.com/brcambui",
    "email": "brendon@cambui.dev"
  },
  "license": "MIT",
  "main": "./build/main/main.js",
  "scripts": {
    "build": "yarn main:build && yarn renderer:build && yarn electron:build",
    "dev": "concurrently \"yarn renderer:dev\" \"wait-on http://localhost:3000/ && yarn main:dev\"",
    "main:build": "webpack --config config/main/webpack.prod.js",
    "main:dev": "webpack --config config/main/webpack.dev.js",
    "renderer:build": "webpack --config config/renderer/webpack.prod.js",
    "renderer:dev": "webpack serve --config config/renderer/webpack.dev.js",
    "electron:build": "electron-builder -p never --config config/electron-builder.json",
    "format": "eslint --fix \"src/**/*.ts\" \"src/**/*.tsx\"",
    "deploy": "yarn electron:publish",
    "package": "yarn electron:package",
    "react:dev": "cross-env BROWSER=none PORT=3000 rescripts start",
    "react:build": "rescripts build",
    "electron:dev": "rimraf build/electron/* && yarn electron:watch",
    "electron:watch": "tsc-watch -p tsconfig.electron.json --onSuccess \"electron .\"",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:package": "yarn react:build && yarn electron:compile && electron-builder -p never",
    "electron:publish": "yarn react:build && yarn electron:compile && electron-builder -p always"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "mongodb": "^4.8.1",
    "mongoose": "^6.5.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "smalltalk": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.6.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.1.0",
    "css-loader": "^6.7.1",
    "electron": "^18.0.3",
    "electron-builder": "^22.14.13",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "nodemon": "^2.0.15",
    "nodemon-webpack-plugin": "^4.7.1",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
